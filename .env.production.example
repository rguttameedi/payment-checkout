# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env.production and fill in your production values

# Server Configuration
NODE_ENV=production
PORT=3000
API_BASE_URL=https://api.yourapp.com

# Database (PostgreSQL) - Production Supabase or other
DB_HOST=your-production-db.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=your-production-user
DB_PASSWORD=your-production-password-change-this

# JWT Authentication
# IMPORTANT: Generate NEW secret for production!
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE-THIS-TO-A-LONG-RANDOM-STRING-64-CHARS-MIN
JWT_EXPIRES_IN=7d

# Cybersource Configuration (PRODUCTION)
# Get these from your Cybersource production account
CYBERSOURCE_MERCHANT_ID=your-production-merchant-id
CYBERSOURCE_API_KEY=your-production-api-key
CYBERSOURCE_SECRET_KEY=your-production-secret-key
CYBERSOURCE_API_URL=https://api.cybersource.com
CYBERSOURCE_ENVIRONMENT=production

# Payment Processing
ENABLE_RECURRING_PAYMENTS=true
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY_HOURS=24

# Frontend URL (for CORS)
CLIENT_URL=https://yourapp.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session/Cookie Settings
# IMPORTANT: Generate NEW secret for production!
SESSION_SECRET=CHANGE-THIS-TO-A-LONG-RANDOM-STRING

# Logging
LOG_LEVEL=info

# Email (Optional - for payment notifications)
# SENDGRID_API_KEY=your-sendgrid-api-key
# EMAIL_FROM=noreply@yourapp.com

# Monitoring (Optional)
# SENTRY_DSN=your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
